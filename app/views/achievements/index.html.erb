<%= include_gon %>

<h1>Achievements#index</h1>

<div class= "dashboard-container">
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/series-label.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>


<div class= "dashboard-wrapper-left">
  <% @achievements.each do | achievement | %>
    <div class="card-product">
      <img src="">
      <div class="card-product-infos">
       <ul>
        <li> <%= achievement.date %> </li>
        <li> <%= achievement.mood.name %> </li>
        <li> <%= achievement.exercice.name %> </li>
        <li> <%= achievement.rating %> </li>
        </ul>

      </div>
    </div>
    <% end %>
  </div>

  <div class= "dashboard-wrapper-right">
    <div id="container" style="width: 600px; height: 500px; margin: 0 auto"></div>
  </div>

</div>



<%= link_to "HOME", root_path %>
<%= link_to "Exercises", exercices_path(@exercice) %>
