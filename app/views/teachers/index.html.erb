<h1 class="teachers-title pt-5">My Classes</h1>

<div class="teacher-box">
  <div class="row">
    <div class="col-lg-6" >
      <div class="teacher-right"> <!--dash-wraper-->
        <% @teachers.each do |teacher| %>
          <div class="border" style='border: 1px solid gray;'> <!--card-product-->
            <%= image_tag("#{teacher.name}-photo.jpg") %>
            <p><%="Come practice at #{teacher.name}, located on the #{teacher.address}. The studio is offering #{teacher.description}!"%></p>

              <%= link_to "Book a class", bookings_path(teacher), class: "teacher-link-a" %>

          </div>
        <% end %>
      </div>
    </div>

    <div class="col-lg-6" >
      <div class="teacher-left"><!--Map here -->
        <div
          id="map"
          style="height: 100vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>
    </div>
  </div>
</div>
