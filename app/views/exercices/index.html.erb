<h1>Index#exercises</h1>

<div class="container">
  <div class="row">
    <% @exercices.each do | exercice | %>
      <div class="col-lg-4">
        <%= link_to exercice_path(exercice) do %>
          <div class="tyt-card" >
            <div class="card-category">
              <%= exercice.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


  <%= simple_form_for :search, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :name, input_html: {value: ""} %>
    <%= f.submit "Search", class: "btn-search" %>
  <% end %>
